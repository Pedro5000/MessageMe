<h2 class="ui center aligned large header">Welcome to MessageMe - <em>a complete Chat App</em></h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power icon"></i>
  Sign up for free
</h4>

<div class="ui placeholder segment">
  <div class="ui very relaxed stackable grid">
    <div class="column">

            <%= form_for(@user, html: {class: 'ui form', role: 'form'}, url: signup_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Choose Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Your Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Choose Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Your Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Sign up", class: 'ui orange submit button' %>
      <% end %>
    </div>
  </div>
</div>
